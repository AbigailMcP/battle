
<h1><%= @game.player_1.name %> and <%= @game.player_2.name %>.. BATTLE!</h1>

<h2><%= @game.player_2.name %>: HP <%= @game.player_2.hp %></h2>

<form action="/attack" method="post">
  <input type="submit" value="Attack!">
</form>

<% if @attacked %>
<h2><%= @game.player_1.name %> attacked <%= @game.player_2.name %></h2>
<% end %>
